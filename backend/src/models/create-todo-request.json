{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "todo",
    "type": "object",
    "properties": {
        "createdAt": {
            "type": "string"
        },
        "userId": {
            "type": "string"
        },
        "todoId": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$",
            "minLength": 5,
            "maxLength": 20
        },
        "dueDate": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "done": {
            "type": "boolean"
        },
        "attachmentUrl": {
            "type": "string"
        }
    },
    "required": [
        "name", "dueDate"
    ],
    "additionalProperties": false
}
